<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/text_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_right_line"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/filter_list_divider"
        android:overScrollMode="always" />

    <TextView
        android:id="@+id/select_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/text_view_right_line"
        android:text=""
        android:textColor="@color/ezfb_black" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/edit_text_padding_left_5dp"
        android:layout_toLeftOf="@id/select_count"
        android:gravity="start"
        android:text="@string/department"
        android:textColor="@color/ezfb_black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/filter_list_divider" />

</RelativeLayout>